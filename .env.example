# File Automation Suite - Environment Configuration
# Copy this file to .env and customize for your environment

# ==============================================================================
# SYSTEM MONITOR CONFIGURATION
# ==============================================================================

# Disk space threshold (percentage of free space required)
# Alert when free space drops below this percentage
DISK_THRESHOLD=20

# CPU usage threshold (percentage)
# Alert when CPU usage exceeds this percentage
CPU_THRESHOLD=75

# Memory threshold (percentage)
# Alert when memory usage exceeds this percentage
MEMORY_THRESHOLD=85

# ==============================================================================
# FILE ORGANIZER CONFIGURATION
# ==============================================================================

# Default path to scan for large files
DEFAULT_SCAN_PATH=/Users/daniel/Documents

# Default number of largest files to find
DEFAULT_TOP_N=10

# File extensions to scan (comma-separated, leave empty for all)
# Example: .pdf,.mp4,.zip
FILE_EXTENSIONS=

# Skip hidden files and directories
SKIP_HIDDEN=true

# ==============================================================================
# macOS AUTOMATION CONFIGURATION (macOS only)
# ==============================================================================

# Path to copilot workspace
COPILOT_WORKSPACE=/Users/daniel/copilot

# Path to VS Code application
VSCODE_PATH=/Applications/Visual Studio Code.app

# Default reminder list name
DEFAULT_REMINDER_LIST=Reminders

# Default calendar name
DEFAULT_CALENDAR=Calendar

# ==============================================================================
# TIME MACHINE MONITOR (macOS only)
# ==============================================================================

# Number of days before backup is considered overdue
TM_BACKUP_THRESHOLD=8

# Enable menu bar notifications
TM_MENU_BAR_ENABLED=true

# Enable sound alerts
TM_SOUND_ALERTS=false

# ==============================================================================
# MASTER CONTROLLER APP
# ==============================================================================

# Window geometry (width x height)
WINDOW_GEOMETRY=1200x800

# Theme (light or dark)
APP_THEME=light

# Enable debug mode
DEBUG_MODE=false

# Log file path
LOG_FILE=/tmp/file_automation.log

# ==============================================================================
# NOTIFICATIONS
# ==============================================================================

# Enable desktop notifications
ENABLE_NOTIFICATIONS=true

# Notification sound (macOS only)
NOTIFICATION_SOUND=default

# ==============================================================================
# ADVANCED SETTINGS
# ==============================================================================

# Parallel processing threads
MAX_THREADS=4

# Progress update interval (seconds)
PROGRESS_INTERVAL=1

# Maximum file size to scan (bytes, 0 for unlimited)
MAX_FILE_SIZE=0

# Timeout for operations (seconds)
OPERATION_TIMEOUT=300

# ==============================================================================
# DEVELOPMENT SETTINGS
# ==============================================================================

# Enable verbose logging
VERBOSE=false

# Test mode (disables actual file operations)
TEST_MODE=false

# Mock data for testing
USE_MOCK_DATA=false
